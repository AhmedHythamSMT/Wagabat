<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="25sp"
    android:layout_marginTop="26sp"
    android:layout_marginBottom="30sp"
    android:layout_marginEnd="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/white"

    >


        <RelativeLayout
            android:id="@+id/rev_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/mc_feu" />

            <ImageView
                android:id="@+id/feed_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/feed_ic"


                />

            <TextView
                android:id="@+id/feed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/feed_icon"
                android:layout_alignTop="@+id/feed_icon"
                android:layout_marginStart="8sp"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/by_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/feed_icon"
                android:layout_alignTop="@+id/feed_icon"
                android:layout_marginStart="40sp"
                android:layout_marginTop="6.5sp"
                android:gravity="center"
                android:text="(25+)"
                android:textColor="@color/gr_f"
                android:textSize="9sp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/str_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/feed_icon"
                android:layout_alignTop="@+id/feed_icon"
                android:layout_marginStart="27sp"
                android:layout_marginTop="9sp"
                android:gravity="center"
                android:src="@drawable/str_ic" />

            <ImageView
                android:id="@+id/fav_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hrt_ec"
                android:layout_toEndOf="@+id/feed_icon"
                android:layout_marginStart="129sp"
                />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/images"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="140sp"
                android:fontFamily="@font/sofiaprolight"
                android:text="McDonald's"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/vrf_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/name"
                android:layout_alignTop="@+id/images"
                android:layout_gravity="start"
                android:layout_marginStart="5sp"
                android:layout_marginTop="148sp"
                android:src="@drawable/verf_mc"


                />

            <ImageView
                android:id="@+id/dlv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name"
                android:layout_alignTop="@+id/images"
                android:layout_gravity="start"
                android:layout_marginStart="11sp"
                android:layout_marginTop="165sp"
                android:src="@drawable/dv_ic"

                />


            <TextView
                android:id="@+id/dlv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/dlv_icon"
                android:layout_alignTop="@+id/images"
                android:layout_marginStart="15sp"
                android:layout_marginTop="160sp"
                android:fontFamily="@font/sofiaprolight"
                android:text="free delivery"
                android:textColor="@color/gr_f"
                android:textSize="12sp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/dlv_txt"
                android:layout_alignTop="@+id/images"
                android:layout_gravity="start"
                android:layout_marginStart="80sp"
                android:layout_marginTop="165sp"
                android:src="@drawable/tm_ic"

                />

            <TextView
                android:id="@+id/tm_mc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/time_icon"
                android:layout_alignTop="@+id/images"
                android:layout_marginStart="15sp"
                android:layout_marginTop="160sp"
                android:fontFamily="@font/sofiaprolight"
                android:text="10-15 mins"
                android:textColor="@color/gr_f"
                android:textSize="12sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$9.50"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/tm_mc"
                android:textSize="15sp"
                android:fontFamily="@font/sofiaprolight"
                android:layout_below="@+id/images"
                android:layout_marginTop="23sp"
                android:layout_marginStart="30sp"
                />

            <Button
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feu3"
                android:background="@android:color/transparent"
                android:fontFamily="@font/sofiaprolight"
                android:text="Add To Cart"
                android:textColor="@color/orange"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/feu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/dlv_txt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25sp"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/rec_txt_mc"
                android:gravity="center"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:text="BURGER"
                android:textSize="10sp"
                android:textColor="#515154"

                />

            <TextView
                android:id="@+id/feu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/feu1"
                android:layout_alignTop="@+id/dlv_txt"
                android:layout_marginStart="6sp"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/rec_txt_mc"
                android:gravity="center"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:text="CHICKEN"
                android:textSize="10sp"
                android:textColor="#515154"


                />

            <TextView
                android:id="@+id/feu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/feu2"
                android:layout_alignTop="@+id/dlv_txt"
                android:layout_marginStart="6sp"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/rec_txt_mc"
                android:gravity="center"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:text="FAST FOOD"
                android:textSize="10sp"
                android:textColor="#515154"


                />


        </RelativeLayout>

</androidx.cardview.widget.CardView>